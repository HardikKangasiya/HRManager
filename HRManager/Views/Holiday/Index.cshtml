@model IEnumerable<HRManager.Models.HolidayModel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-6">
        <h2>Holidays</h2>
    </div>
    <div class="col-md-6 text-right">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
    </div>
</div>

<table class="table">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Holiday Date</th>
        <th>Day</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model.Select((value, index) => new { Value = value, Index = index + 1 }))
    {
        <tr>
            <td>@item.Index</td>
            <td>@Html.DisplayFor(modelItem => item.Value.HolidayName)</td>
            <td>@item.Value.HolidayDate.ToString("d MMM yyyy")</td>
            <td>@Html.DisplayFor(modelItem => item.Value.HolidayDate.DayOfWeek)</td>
            <td>
                @if (item.Value.HolidayDate > DateTime.Now)
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Value.HolidayID }, new { @class = "btn btn-primary" })
                    @:&nbsp; <!-- Add non-breaking space -->
                    @Html.ActionLink("Delete", "Delete", new { id = item.Value.HolidayID }, new { @class = "btn btn-danger" })
                }

            </td>
        </tr>
    }
</table>
