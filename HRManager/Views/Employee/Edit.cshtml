@model HRManager.Models.Employee

@{
    ViewBag.Title = "Edit";
}

<div class="d-flex justify-content-center align-items-baseline" style="height: 100vh;">

    <div class="col-md-6">
        <h2>Edit</h2>

        @using (Html.BeginForm("Edit", "Employee", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Employee</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.EmployeeID)
        @Html.HiddenFor(model => model.ProfilePicture)

        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Username)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.FirstName)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.LastName)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Email)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.JoiningDate)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.TextBox("JoiningDate", (string)ViewBag.JoiningDate_string, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.JoiningDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Phone)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Department)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.DropDownListFor(model => model.Department, (SelectList)ViewBag.CustomDepartment, "Select Department", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Designation)</strong> <span class="text-danger">*</span></label>
                <div>
                    @Html.DropDownListFor(model => model.Designation, (SelectList)ViewBag.CustomDesignation, "Select Designation", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-6">
                <label class="control-label"><strong>@Html.DisplayNameFor(model => model.ProfilePicture)</strong> <span class="text-danger">*</span></label>
                <div>
                    <img src="@Url.Action("GetProfilePicture", "Employee", new { employeeID = Model.EmployeeID })" width="100" height="100" />
                    <input name="ProfilePictureFile" type="file" accept="image/*" class="form-control mt-2">

                    @Html.ValidationMessageFor(model => model.ProfilePicture, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <div>
                    <input type="submit" value="Save" class="btn btn-success" style="width: 100%;" />
                    <br />
                    <br />
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
