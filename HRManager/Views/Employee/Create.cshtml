@model HRManager.Models.Employee

@{
    ViewBag.Title = "Create";
}


<div class="d-flex justify-content-center align-items-baseline" style="height: 100vh;">

    <div class="col-md-6">
        <h2>Create</h2>

        @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Employee</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Username)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.FirstName)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.LastName)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Email)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.JoiningDate)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.EditorFor(model => model.JoiningDate, "{0:yyyy-MM-ddTHH:mm}", new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                            @Html.ValidationMessageFor(model => model.JoiningDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Phone)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Department)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.DropDownListFor(model => model.Department, new SelectList(ViewBag.Department, "DepartmentName", "DepartmentName") , "Select Department", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.Designation)</strong> <span class="text-danger">*</span></label>
                        <div>
                            @Html.DropDownListFor(model => model.Designation, new SelectList(ViewBag.Designation, "DesignationName", "DesignationName"), "Select Designation", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <label class="control-label"><strong>@Html.DisplayNameFor(model => model.ProfilePicture)</strong> <span class="text-danger">*</span></label>
                        <div>
                            <input name="ProfilePicture" type="file" accept="image/*" class="form-control">
                            @Html.ValidationMessageFor(model => model.ProfilePicture, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div>
                            <input type="submit" value="Create" class="btn btn-primary" style="width: 100%;" />
                            <br />
                            <br />
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
